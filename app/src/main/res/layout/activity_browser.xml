<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="appColors"
            type="com.sermah.gembrowser.model.theming.AppColors" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@{appColors.contentBackground}"
        tools:context=".BrowserActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/content_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingVertical="32dp"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/bottom_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/information_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@{appColors.backgroundBottom}"
            android:clipToPadding="false"
            android:elevation="10dp"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/information_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="@color/material_on_background_emphasis_high_type"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Error Name" />

            <TextView
                android:id="@+id/information_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/material_on_background_emphasis_high_type"
                android:textSize="16sp"
                tools:text="Error description from meta" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/bottom_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@{appColors.backgroundBottom}"
            android:clipToPadding="false"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/uri_current"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@{appColors.textBottomTitle}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:paddingBottom="0dp"
                    tools:text="file.gmi" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:requiresFadingEdge="horizontal"
                    android:scrollbarSize="2dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/uri_segments_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </HorizontalScrollView>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:background="@drawable/bg_uri_edittext"
                    android:clipToOutline="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp">
                    <EditText
                        android:id="@+id/uri_field"
                        style="@style/Widget.GemBrowser.EditText.UriBar"
                        android:textColor="@{appColors.textBottomURI}"
                        android:background="@{appColors.backgroundBottomURI}"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="@string/uri_field_hint"
                        android:importantForAutofill="no"
                        android:inputType="textUri"
                        android:maxLines="1" />
                </FrameLayout>


                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/homepage_btn"
                    style="@style/Widget.GemBrowser.Button.IconOnly"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_homepage"
                    android:tint="@{appColors.iconNeutral}"/>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/menu_btn"
                    style="@style/Widget.GemBrowser.Button.IconOnly"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_more"
                    android:tint="@{appColors.iconNeutral}" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>